<div class="container">
    <div class="col-md-offset-4 col-xs-offset-4 col-sm-offset-4 col-lg-offset-4">
        <form action="/admin/category/edit" method="post">
            <div class="form-group">
                <label>Category Name</label>
                <input value="<%= result.name%>" type="text" name="name" class="form-control">
                <input type="hidden" name="id" value="<%= result._id %>"/>
            </div>
            <button class="btn btn-success" type="submit">Update</button>
        </form>
    </div>
</div>