<div class="jumbotron text-center">
    <h1>Edit User Details</h1> 
</div>
    
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <form action="/edit" method="post" encType="multipart/form-data">	
                <div class="card">
                    <div class="card-header">Edit user Details</div>
                    <div class="card-body">
                        <input type="hidden" name="id" value="<%= result._id %>"/>
                        <div class="form-group">
							<div class="custom-file">
                            	<label for="photo" class="custom-file-label"><i class="fa fa-pencil"></i></label>
                                <input type="file" class="custom-file-input" id="photo" name="photo" />
                                <input type="hidden" name="oldPhoto" value="<%= result.photo %>" />
							</div>
                        </div>
                        <div class="form-group">
                            <label for="username">Name</label>
                            <input type="text" class="form-control" id="username" name="username" value="<%= result.username %>" />
                        </div>
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="UPDATE" class="btn btn-success">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>