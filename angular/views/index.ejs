<!DOCTYPE html>
<html ng-app="myApp">
<head>
	<title></title>

	<link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
	<script type="text/javascript" src="/js/jquery.js"></script>
	<script type="text/javascript" src="/js/bootstrap.js"></script>
	<script type="text/javascript" src="/js/angular.js"></script>
	<script type="text/javascript" src="/js/app.js"></script>

</head>
<body ng-controller="myCtrl">
	<div class="container">
		<div class="jumbotron">
			<h2>The Stepping Stone</h2>
			<button data-toggle="modal" data-target="#addModal" class="btn btn-primary">Add New</button>
		</div>
	</div>

<div class="modal fade" id="addModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h2>Add New Student</h2>
				<!-- <pre ng-bind="newData | json"></pre> -->
			</div>
			<div class="modal-body">
				<div class="form-group">
					<label>Full Name</label>
					<input ng-model="newData.name" type="text" class="form-control" placeholder="Full Name">
				</div>
				<div class="form-group">
					<label>Fee</label>
					<input type="text" ng-model="newData.fee" class="form-control" placeholder="Fee">
				</div>
				<div class="form-group">
					<label>City</label>
					<select class="form-control" ng-model="newData.city">
						<option>Select</option>
						<option>Indore</option>
						<option>Ujjain</option>
						<option>Bhopal</option>

					</select>
				</div>
				<div class="form-group">
					<label>Gender</label>
					Male <input ng-model="newData.gender" value="male" type="radio" />
					Female <input value="female" ng-model="newData.gender" type="radio" />
				</div>
				<hr />
				<button ng-click="save()" data-dismiss="modal" class="btn btn-success">Save</button>
				<button class="btn btn-danger" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>


<div class="modal fade" id="msgModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h2>Message</h2>
			</div>
			<div class="modal-body">
				<p>Data Saved !</p>
			</div>
			<div class="modal-footer">
				<button class="btn btn-default" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>

</body>



</html>
