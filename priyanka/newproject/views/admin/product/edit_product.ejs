<div class="container">
    <div class="col=md-4 col-xs-4 col-sm-4 col-lg-4 col-md-offset-4 col-xs-offset-4 col-sm-offset-4 col-lg-offset-4">
        <form action="/admin/product/edit" method="post" enctype="multiple/form-data">
            <input type="hidden" name="id" value="<%= result1._id%>" />
            <div class="form-group">
                <label> Product Name </label>
                <input value="<%= result1.name %>" name="name" class="form-control" type="text"/>
            </div>
            <div class="form-group">
                <label> Product Image </label>
                <input name="image" class="form-control" type="file" value ="<%= result1.image %>" />
            </div>
            <div class="form-group">
                <label> Product Price </label>
                <input value="<%= result1.price %>" name="price" class="form-control" type="text"/>
            </div>
            <div class="form-group">
                <label> Detail </label>
                <textarea name="detail" class="form-control"> <%= result1.detail %> </textarea>
             </div>
             <div class="form-group">
                <label> Product Category </label>
                <select name="category" class="form-control">
                    <option>Select</option>
                    <% result2.forEach(function(item){ %>
                        <% if(item._id == result1.category)
                        { %>
                            <option selected= "selected" value = "<%= item._id %>" ><%= item.name; %></option>
                        <%}
                        else
                        { %>
                            <option value="<%= item._id %>" > <%= item.name %></option>
                       <% }
                    }); %>
                </select>
            </div>
            <div class="form-group">
                    <label> Discount </label>
                    <input value="<%= result1.discount %>" name="discount" class="form-control" type="text"/>
            </div>
            <button type="submit" class="btn btn-info">Update Product</button>    
        </form>
    </div>
</div>