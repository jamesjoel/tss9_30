<div class="container">
	<div class="col-md-4 c0l-md-offset-4">
		<form action="/edit" method="post">
			<input type="hidden" value="<%= result._id %>" name="id"/>
			<div class="form-group">
				<label> Full Name </label>
				<input type="text" value="<%= result.full_name%>" name="name">
			</div> 
			<div class="form-group">
				<label> Age </label>
				<input type="text" value="<%= result.age%>" name="new_age"/>
			</div> 
			<div class="form-group">
				<label> Fee </label>
				<input type="text" value="<%= result.fee%>" name="new_fee"/>
			</div> 
			<button type="submit" class="btn btn-success"> Update </button>
		</form>
	</div>
</div>