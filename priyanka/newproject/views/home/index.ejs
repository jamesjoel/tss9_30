<style>
#pro-box .panel-heading h4{
    margin: 0;
}
</style>
<div class="container">
    <div class="row">
        <div id="pro-box" class = "row" style="margin-top:50px">
            <% product.forEach(function(item){
                var d= item.discount;
                var new_price = item.price - (item.price*d/100);
            %>    
                 <div class="col-md-3">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4><%= item.name %></h4>
                        </div>
                        <div class="panel-body" style="text-align:center">
                                <img src="/products/<%= item.image %>" height="80" width="80" />
                                <p><%= new_price %></p>
                                <p style="text-decoration : line-through;"> Rs. <%= item.price %></p>
                            </div>
                            <div class="panel-footer">
                                <a href="#" class="btn btn-sm btn-warning">Buy</a>
                                <a href="/cart/add/<%= item._id %>" class="btn btn-sm btn-primary">Add to Cart</a>
                            </div>
                        </div>
                    </div>
               <% }) %>
                    
                    
                    
                    
                    
                    
            




        </div>
    </div>
</div>