<div class="container">
    <form action="/user/edit" method="post">
        <input type="hidden" name="id" value="<%= result._id %>"/>
        <div class="form-group">
            <label> Full Name </label>
            <input type="text" value = "<%= result.full_name %>" name="full_name" class="form-control"/>
        </div>
        <div class="form-group">
            <label> Address </label>
            <input type="text" value = "<%= result.address %>" name="address" class="form-control"/>
        </div>
        <div class="form-group">
            <label> Gender </label>
            <input type="text" value = "<%= result.gender %>" name="gender" class="form-control"/>
        </div>
        <div class="form-group">
            <label> Contact </label>
            <input type="text" value = "<%= result.contact %>" name="contact" class="form-control"/>
        </div>
        <div class="form-group">
            <label> City </label>
            <select name="city" class="form-control">
                <option> <%= result.city %> </option>
            </select>
        </div>
        <button class="btn btn-sm btn-success" type="submit" > Update </button> 
    </form>
</div>