<div class="container">
	<Br />
	<Br />
	<div class="offset-md-4 col-md-4">
		<form action="/admin/product/edit" method="post">
			<input type="hidden" name="id" value="<%= result1._id %>"/>
		  <div class="form-group">
		    <label for="email">Product Name</label>
		    <input value="<%= result1.name %>" type="text" name="name" class="form-control">
		  </div>
		  <div class="form-group">
		    <label for="email">Product Price</label>
		    <input type="text" value="<%= result1.price %>" name="price" class="form-control">
		  </div>
		  <div class="form-group">
		    <label for="email">Detail</label>
		    <textarea name="detail" class="form-control"><%= result1.detail %></textarea>
		  </div>
		  <div class="form-group">
		    <label for="email">Product Category</label>
		    	<select name="category" class="form-control">
		    		<option>Select</option>
		    		<% result2.forEach(function(item){ %>
		    			<% if(item._id == result1.category)
		    			{ %>
		    				<option selected="selected" value="<%= item._id %>"><%= item.name; %></option>

		    			<% 
		    			}
		    			else
		    			{ %>
		    				<option value="<%= item._id %>"><%= item.name; %></option>
		    			<% 
		    			}
		    			
		    	}); %>

		    		
		    	</select>
		  </div>
		  <div class="form-group">
		    <label for="email">Discount</label>
		    <input value="<%= result1.discount %>" type="text" name="discount" class="form-control">
		  </div>
		  
		  <button type="submit" class="btn btn-primary">Update Product</button>
		</form>
		
	</div>
</div>