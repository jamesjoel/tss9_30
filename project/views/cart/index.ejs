<section style="margin-top: 150px;" class="feature_product_area section_gap">
		<div class="main_box">
			<div class="container-fluid">
				<div class="row">
					<div class="container">
						<h2>Your Cart</h2>
						<a href="/cart/clearcart">Clear All</a>
						<table class="table table-hover table-bordered table-striped">
							<tr>
								<td>S.No.</td>
								<td>Product Name</td>
								<td>Image</td>
								<td>Price</td>
								<td>Delete</td>
							</tr>
							<% var total=0;
							result.forEach(function(item, index){ 

							total += parseInt(item.price);
							%>
								<tr>
									<td><%= index+1 %></td>
									<td><%= item.name %></td>
									<td><img src="/products/<%= item.image %>" height="70" width="70" /></td>
									<td><%= item.price %></td>
									<td><a href="/cart/delete/<%= item._id %>"><i class="fa fa-close"></i></a></td>
								</tr>
						<% }) %>
							<tr>
								<td colspan="4" align="right">Grand Total</td>
								<td><%= total %></td>
							</tr>
						</table>
					</div>
				</div>
				

				
			</div>
		</div>
	</section>